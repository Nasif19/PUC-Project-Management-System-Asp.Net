@using PUC_PMS.Models
@model PUC_PMS.Models.LogIn
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html>
<head>
    <title>Login</title>
    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/assets/vendor/modernizr/modernizr.js"></script>
</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Logos/puc.png" height="70" alt="Admin" />
            </a>

            @* Teacher Login *@
            <div class="panel panel-sign" id="teacher_login">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Supervisor LogIn</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("LogIn", "Login", FormMethod.Post))
                    {
                        <div class="form-group mb-lg" style="display:none">
                            <label>Type</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Type, new { @class = "form-control input-lg gtype" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Type)

                            </div>
                        </div>
                        <div class="form-group mb-lg">
                            <label>User Name</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Roll, new { @class = "form-control input-lg" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Roll)
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                            </div>
                            <div class="input-group input-group-icon">
                                @Html.PasswordFor(p => p.Password, new { @class = "form-control input-lg" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Password)
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    <input id="RememberMe" name="rememberme" type="checkbox" />
                                    <label for="RememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <input type="submit" class="btn btn-primary hidden-xs" value="Sign In" />
                            </div>
                            <label>@ViewBag.Message</label>
                        </div>
                    }

                    <button class="btn btn-primary" id="btn_student">Student Login</button>
                </div>
            </div>

            @* Student Login *@
            <div class="panel panel-sign" id="student_login" style="display:none">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i>Student LogIn</h2>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("LogIn", "Login", FormMethod.Post))
                    {
                        <div class="form-group mb-lg" style="display:none">
                            <label>Type</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Type, new { @class = "form-control input-lg gtype" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Type)

                            </div>
                        </div>
                        <div class="form-group mb-lg">
                            <label>Student Id</label>
                            <div class="input-group input-group-icon">
                                @Html.TextBoxFor(t => t.Roll, new { @class = "form-control input-lg" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Roll)
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-user"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="form-group mb-lg">
                            <div class="clearfix">
                                <label class="pull-left">Password</label>
                            </div>
                            <div class="input-group input-group-icon">
                                @Html.PasswordFor(p => p.Password, new { @class = "form-control input-lg" })
                                <br />
                                @Html.ValidationMessageFor(v => v.Password)
                                <span class="input-group-addon">
                                    <span class="icon icon-lg">
                                        <i class="fa fa-lock"></i>
                                    </span>
                                </span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-8">
                                <div class="checkbox-custom checkbox-default">
                                    <input id="RememberMe" name="rememberme" type="checkbox" />
                                    <label for="RememberMe">Remember Me</label>
                                </div>
                            </div>
                            <div class="col-sm-4 text-right">
                                <input type="submit" class="btn btn-primary hidden-xs" value="Sign In" />
                            </div>
                            <label>@ViewBag.Message</label>
                        </div>
                    }

                    <button class="btn btn-primary" id="btn_teacher">Supervisor Login</button>
                </div>
            </div>



            <p class="text-center text-muted mt-md mb-md">&copy; Copyright Premier University <a href="https://puc.ac.bd">PUC</a>.</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/assets/vendor/jquery/jquery.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/assets/vendor/magnific-popup/magnific-popup.js"></script>
    <script src="~/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/assets/javascripts/theme.init.js"></script>

</body>
</html>
<script>
    $(document).ready(function () {
        $("#btn_student").click(function () {
            $("#student_login").slideDown();
            $("#teacher_login").hide();
            $(".gtype").val("Student")
        })

        $("#btn_teacher").click(function () {
            $("#student_login").hide();
            $("#teacher_login").slideDown();
            $(".gtype").val("Teacher")
        })

    });
    $(".gtype").val("Teacher")
  
</script>

